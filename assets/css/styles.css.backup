  margin-bottom: var(--mb-1);
  text-shadow: 0 0 50px rgba(29, 155, 240, 0.6);
  animation: glow 2s ease-in-out infinite alternate;
}

@keyframes glow {
  from { text-shadow: 0 0 20px rgba(29, 155, 240, 0.5); }
  to { text-shadow: 0 0 50px rgba(29, 155, 240, 0.9); }
}

.home__profession {
  font-size: var(--h1-font-size);
